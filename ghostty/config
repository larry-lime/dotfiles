# NOTE: CMD+SHFIT+, to reload Ghostty config

# Settings

# Fonts
font-family = "ComicCodeLigatures Nerd Font"
font-size = 14
background-opacity = 1.0
unfocused-split-opacity = 1.0

# Colors & Icon
theme = dark:Catppuccin Macchiato,light:Catppuccin Latte
macos-icon = xray

# Tmux Keybinds

# ctrl+tab to go to last used tmux window
keybind = ctrl+tab=text:\x06l

# cmd+t and cmd+k map to Tnav commands
keybind = cmd+k=text:\x06F
keybind = cmd+t=text:\x06W

# cmd+g to open lazygit
keybind = cmd+g=text:\x06G

# cmd+d to open lazydocker
keybind = cmd+d=text:\x06D

# cmd+z to tmux zoom pane
keybind = cmd+z=text:\x06z

# cmd+w to close window, cmd+x to close pane
keybind = cmd+w=text:\x06&
keybind = cmd+x=text:\x06x

# cmd+| to split vertically, cmd+- to split horizontally
keybind = cmd+shift+\=text:\x06|
keybind = cmd+-=text:\x06-

# cmd+n to open window
keybind = cmd+n=text:\x06c

# Go to open windows
keybind = cmd+digit_1=text:\x061
keybind = cmd+digit_2=text:\x062
keybind = cmd+digit_3=text:\x063
keybind = cmd+digit_4=text:\x064
keybind = cmd+digit_5=text:\x065
keybind = cmd+digit_6=text:\x066
keybind = cmd+digit_7=text:\x067
keybind = cmd+digit_8=text:\x068
keybind = cmd+digit_9=text:\x069
